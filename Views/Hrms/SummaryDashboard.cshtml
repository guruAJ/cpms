                                <div class="counter-box bg-primary text-white">
                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.TotalCountSummaryIqmp</span>
                                    <p class="text-white">Total Cases</p>
                                </div>
                            </div>
                            <div class="four col-md-4">
                                <div class="counter-box bg-danger text-white">
                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.OpenCountIqmp</span>
                                    <p class="text-white">@*<a class="text-white" href="/Hrms/OpenCaseIqmp1"></a>*@Open Cases</p>
                                </div>
                            </div>
                            <div class="four col-md-4">
                                <div class="counter-box bg-success text-white">
                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.ClosedCountIqmp</span>
                                    <p class="text-white">Closed Cases</p>
                                </div>
                            </div>
                        </div>

                        <div class="row second-heading"><u><h4>Summary of Weekly Cases</h4></u></div>
                        <div class="row mt-4">

                            <div class="four col-md-4">
                                <div class="counter-box bg-primary text-white">
