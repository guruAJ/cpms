                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.WeeklyOpenCount</span>
                                    <p class="text-white"><a class="text-white" href="/Hrms/GetOpenCountTableWeekly">Open Cases</a></p>
                                </div>
                            </div>

                            <div class="four col-md-4">
                                <div class="counter-box bg-success text-white">
                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.WeeklyCloseCount</span>
                                    <p class="text-white">Closed Cases</p>
                                </div>
                            </div>

                        </div>

                        <div class="row mt-4 hide">
                            <div class="four col-md-4">
                                <div class="counter-box bg-primary text-white">
                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.MonthlyOpenCount</span>
                                    <p class="text-white">Monthly Open Cases</p>
                                </div>
                            </div>
                            <div class="four col-md-4 hide">
                                <div class="counter-box bg-success text-white">
                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.MonthlyClosedCount</span>
                                    <p class="text-white">Monthly Closed Cases</p>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>