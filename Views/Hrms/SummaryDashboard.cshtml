                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.WeeklyOpenCountIqmp</span>
                                    <p class="text-white">@*<a class="text-white" href="/Hrms/WeeklyOpenCaseIqmp"></a>*@Open Cases</p>
                                </div>
                            </div>

                            <div class="four col-md-4">
                                <div class="counter-box bg-success text-white">
                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.WeeklyCloseCountIqmp</span>
                                    <p class="text-white">Closed Cases</p>
                                </div>
                            </div>

                        </div>

                        <div class="row mt-4 hide">
                            <div class="four col-md-4">
                                <div class="counter-box bg-primary text-white">
                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.MonthlyOpenCountHrms</span>
                                    <p class="text-white">Monthly Open Cases</p>
                                </div>
                            </div>
                            <div class="four col-md-4 hide">
                                <div class="counter-box bg-success text-white">
                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.MonthlyClosedCountIqmp</span>
                                    <p class="text-white">Monthly Closed Cases</p>
                                </div>
                            </div>
                        </div>
                    }
                    @if (@Logins.RoleType == 3)
                    {
                        <h1>HRMS and IQMP</h1>
                        <div class="row heading-format"><u><h4>Summary of All Cases</h4></u></div>
                        <div class="row mt-4">
                            <div class="four col-md-4">
                                <div class="counter-box bg-primary text-white">
                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.TotalCountSummary</span>
                                    <p class="text-white">Total Cases</p>
                                </div>
                            </div>
                            <div class="four col-md-4">
                                <div class="counter-box bg-danger text-white">
                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.OpenCount</span>
                                    <p class="text-white"><a class="text-white" href="/Hrms/GetOpenCountTable">Open Cases</a></p>
                                </div>
                            </div>
                            <div class="four col-md-4">
                                <div class="counter-box bg-success text-white">
                                    <i class="fa fa-thumbs-o-up"></i> <span class="counter text-white">@ViewBag.ClosedCount</span>
                                    <p class="text-white">Closed Cases</p>
                                </div>
                            </div>
                        </div>

                        <div class="row second-heading"><u><h4>Summary of Weekly Cases</h4></u></div>
                        <div class="row mt-4">

